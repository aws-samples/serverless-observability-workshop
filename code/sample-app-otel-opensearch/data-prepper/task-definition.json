{
    "family": "data-prepper-taskdef",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "data-prepper-container",
            "image": "<DP_IMAGE_URI>",
            "portMappings": [
                {
                    "containerPort": 4900,
                    "hostPort": 4900,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/data-prepper",
                    "awslogs-region": "<REGION>",
                    "awslogs-create-group": "true",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "executionRoleArn":"<ECS_EXE_TASK_ROLE>",
    "taskRoleArn": "<ECS_TASK_ROLE>",
    "cpu": "256",
    "memory": "512"
}